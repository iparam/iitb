<%= title("Bulletins") %>
<div class="listing">
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Year</th>
      <th width="30"></th>
    </tr>

    <% @bulletins.each do |bulletin| %>
        <tr>
          <td><%= link_to bulletin.name,bulletin %></td>
          <td><%= bulletin.description %></td>
          <td><%= bulletin.year %></td>
          <td><%= link_to image_tag('edit_10.png'), edit_bulletin_path(bulletin) %>
            <%= link_to image_tag('delete_10.png'), bulletin, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
    <% end %>
  </table>
</div>
<br />

<%= link_to 'New Bulletin', new_bulletin_path %>
